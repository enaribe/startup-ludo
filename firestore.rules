rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Admin: vérifie l'email ou le custom claim "admin"
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.email == 'startupludo@concree.com' ||
        request.auth.token.admin == true
      );
    }

    function isValidUser() {
      return isAuthenticated() &&
             request.resource.data.keys().hasAll(['email', 'displayName', 'createdAt']) &&
             request.resource.data.email is string &&
             request.resource.data.displayName is string;
    }

    // Users collection (PUBLIC read for profiles/leaderboard)
    // Write requires authentication and ownership
    match /users/{userId} {
      allow read: if true;  // Public read for leaderboard display
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();

      // User's startups subcollection (PUBLIC read for leaderboard)
      match /startups/{startupId} {
        allow read: if true;  // Public read for leaderboard
        allow write: if isOwner(userId);
      }
    }

    // Collection group: allow reading all "startups" subcollections (for classement)
    match /{path=**}/startups/{startupId} {
      allow read: if true;  // Public read for leaderboard
    }

    // User Stats collection (PUBLIC read for leaderboard)
    // Write requires authentication and ownership
    match /userStats/{userId} {
      allow read: if true;  // Public read for leaderboard display
      allow write: if isOwner(userId);
    }

    // Editions collection (PUBLIC read - game content, write for admins)
    match /editions/{editionId} {
      allow read: if true;  // Public read - no sensitive data
      allow write: if isAdmin();
    }

    // Challenge programs (PUBLIC read - game content, write for admins)
    match /challenges/{challengeId} {
      allow read: if true;  // Public read - no sensitive data
      allow write: if isAdmin();
    }

    // Ideation cards/decks (PUBLIC read - game content, write for admins)
    match /ideationCards/{deckId} {
      allow read: if true;  // Public read - no sensitive data
      allow write: if isAdmin();
    }

    // Game data (progression, board config — admin managed)
    match /gameData/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Leaderboards collection
    match /leaderboards/{leaderboardId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin(); // Admin peut reset/modifier
    }

    // Game Sessions collection
    // Write requires authentication
    match /gameSessions/{sessionId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Achievements collection
    match /achievements/{achievementId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Reports collection
    match /reports/{reportId} {
      allow read: if isAuthenticated() &&
                    (resource.data.reportedBy == request.auth.uid ||
                     resource.data.userId == request.auth.uid ||
                     isAdmin());
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Challenge enrollments (doc id = userId_challengeId)
    // Authenticated users can read/write their own enrollments
    match /challengeEnrollments/{enrollmentId} {
      allow read: if true;  // Public read for challenge progress display
      allow create: if isAuthenticated() &&
                      request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() &&
                      resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }

    // Default projects (PUBLIC read - game content, write for admins)
    match /defaultProjects/{projectId} {
      allow read: if true;  // Public read - no sensitive data
      allow write: if isAdmin();
    }
  }
}
